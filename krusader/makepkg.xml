<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE KrusaderUserActions>
<KrusaderUserActions>

 <action name="Add checksum" >
  <title>Add checksum</title>
  <tooltip>Add checksum</tooltip>
  <icon>run-build-configure</icon>
  <category>makepkg</category>
  <description>Add checksum</description>
  <command>pkg-magic -m -u -- -g</command>
 </action>
 <action name="Make package" >
  <title>Make package</title>
  <tooltip>Make package</tooltip>
  <icon>run-build</icon>
  <category>makepkg</category>
  <description>Make package</description>
  <command>pkg-magic -m -u -- -sr</command>
 </action>
 <action name="Make package ignore deps" >
  <title>Make package ignore deps</title>
  <tooltip>Make package ignore deps</tooltip>
  <icon>debug-run</icon>
  <category>makepkg</category>
  <description>Make package ignore deps</description>
  <command>pkg-magic -m -u -- -d</command>
 </action>
 <action name="Make package source" >
  <title>Make package source</title>
  <tooltip>Make package source</tooltip>
  <icon>run-build-file</icon>
  <category>makepkg</category>
  <description>Make package source</description>
  <command>pkg-magic -A -u</command>
 </action>
 <action name="Make package signed" >
  <title>Make package signed</title>
  <tooltip>Make package signed</tooltip>
  <icon>view-certificate-sign</icon>
  <category>makepkg</category>
  <description>Make package signed</description>
  <command>pkg-magic -m -u -- -sr --sign</command>
 </action>
 <action name="Make package and install" >
  <title>Make package and install</title>
  <tooltip>Make package and install</tooltip>
  <icon>run-build-install</icon>
  <category>makepkg</category>
  <description>Make package and install</description>
  <command>pkg-magic  -m" -u -- -sri</command>
 </action>
 <action name="Make package and clean" >
  <title>Make package and clean</title>
  <tooltip>Make package and clean</tooltip>
  <icon>run-build-clean</icon>
  <category>makepkg</category>
  <description>Make package and clean</description>
  <command>pkg-magic -m -u -- -src</command>
 </action>
 <action name="Repackage without building" >
  <title>Repackage without building</title>
  <tooltip>Repackage without building</tooltip>
  <icon>debug-run-cursor</icon>
  <category>makepkg</category>
  <description>Repackage without building</description>
  <command>pkg-magic -m -u -- -Rf</command>
 </action>
 <action name="Get and extract" >
  <title>Get and extract</title>
  <tooltip>Get and extract</tooltip>
  <icon>run-build-install-root</icon>
  <category>makepkg</category>
  <description>Get and extract</description>
  <command>pkg-magic -m -u -- -o</command>
 </action>

</KrusaderUserActions>	