[Desktop Entry]
Type=Service
ServiceTypes=KonqPopupMenu/Plugin
MimeType=application/x-xz-pkg;
Actions=dep;revdep;nodup;_SEPARATOR_;dep_sync;revdep_sync;nodup_sync;_SEPARATOR_;
X-KDE-Priority=TopLevel
X-KDE-StartupNotify=false
X-KDE-Submenu=Pkg-tools

# Usage: pkg-magic $uri $action $args $opts

[Desktop Action dep]
Name=Dependency graph
Icon=office-chart-polar
Exec=pkg-magic "%u" "-t" "-g" "png"

[Desktop Action revdep]
Name=Dependency graph reverse
Icon=office-chart-polar-stacked
Exec=pkg-magic "%u" "-t" "-gr" "png"

[Desktop Action nodup]
Name=Dependency graph no duplicates
Icon=office-chart-area-focus-peak-node
Exec=pkg-magic "%u" "-t" "-glu" "png"

[Desktop Action dep_sync]
Name=Dependency graph (sync DBs)
Icon=office-chart-polar
Exec=pkg-magic "%u" "-t" "-gs" "png"

[Desktop Action revdep_sync]
Name=Dependency graph reverse (sync DBs)
Icon=office-chart-polar-stacked
Exec=pkg-magic "%u" "-t" "-grs" "png"

[Desktop Action nodup_sync]
Name=Dependency graph no duplicates (sync DBs)
Icon=office-chart-area-focus-peak-node
Exec=pkg-magic "%u" "-t" "-glus" "png"
